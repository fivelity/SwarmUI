@{
    string themeId = "modern_dark";
    // TODO: Identify user by auth header and use their settings to determine theme
    if (ViewContext.HttpContext.Request.Cookies.TryGetValue("sui_theme_id", out string themeCookie) && Program.Web.RegisteredThemes.ContainsKey(themeCookie)) {
        themeId = themeCookie;
    }
    WebServer.ThemeData theme = Program.Web.RegisteredThemes[themeId];
    string bsUrl = "~/css/bootstrap.min.css";
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="@(theme.IsDark ? "dark" : "light")" data-theme="@themeId">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title id="page_title">@ViewData["Title"] - SwarmUI - @Program.ServerSettings.UserAuthorization.InstanceTitle</title>
    <link rel="stylesheet" id="bs_theme_header" href="@bsUrl" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" id="sitecssheader" href="~/css/main.css?vary=@Utilities.VaryID" />
    <link rel="stylesheet" id="themecssheader" href="~/css/theme.css?vary=@Utilities.VaryID" />
    @RenderSection("Header", required: false)
    @WebServer.PageHeaderExtra
    @foreach (string path in theme.CSSPaths)
    {
        string themeUrl = $"{path}?vary={Utilities.VaryID}";
        <link class="theme_sheet_header" rel="stylesheet" href="@themeUrl" />
    }
    <link id="favicon" rel="shortcut icon" href="~/favicon.ico" />
    <script src="~/js/util.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/translator.js?vary=@Utilities.VaryID"></script>
</head>
<body>
    <div class="top-status-bar-wrapper"><div class="top-status-bar" id="top_status_bar"></div></div>
    <a class="visually-hidden-focusable" href="#main">Skip to content</a>
    <div id="live_status" class="visually-hidden" aria-live="polite" aria-atomic="true"></div>
    <header>
        <!-- Tier 1: Global header -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Text2Image">
                    <img src="/favicon.ico" alt="SwarmUI Logo" width="24" height="24" class="d-inline-block align-text-top">
                    SwarmUI
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_simple" href="/Text2Image#Simple">Simple</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="main_nav_generate" href="/Text2Image#Generate">Generate</a>
                        </li>
                        <li class="nav-item" id="main_nav_comfy_item" style="display: none;">
                            <a class="nav-link" id="main_nav_comfy" href="/Text2Image#Comfy" data-requiredpermission="comfy_dynamic_custom_workflows">Comfy Workflow</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_utilities" href="/Text2Image#Utilities">Utilities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_settings" href="/Text2Image#Settings">User</a>
                        </li>
                        <li class="nav-item" data-requiredpermission="view_server_tab">
                            <a class="nav-link" id="main_nav_server" href="/Text2Image#Server">Server</a>
                        </li>
                    </ul>
<div class="d-flex align-items-center gap-2">
                        <div id="top_status_bar" class="pe-2"></div>
                        <div class="btn-group" role="group" aria-label="View toggles">
                            <button id="theme_toggle_button" class="btn btn-outline-secondary btn-sm" type="button" title="Toggle theme">
                                <i class="bi bi-moon" id="theme_toggle_icon"></i>
                            </button>
                            <button id="density_toggle_button" class="btn btn-outline-secondary btn-sm" type="button" title="Toggle compact density">
                                <i class="bi bi-arrows-collapse" id="density_toggle_icon"></i>
                            </button>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Accounts/View">Account</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Tier 2: Contextual Sub-Navigation Bar -->
        <div class="bg-body-tertiary border-bottom" id="subnav_bar" style="display: none;">
            <div class="container-fluid py-1 d-flex align-items-center">
                <ul class="nav nav-underline flex-grow-1" id="subnav_list">
                    <!-- Sub-navigation items dynamically populated based on active main tab -->
                </ul>
                <div class="ms-auto small text-secondary" id="subnav_hint"></div>
            </div>
        </div>
    </header>
    <main id="main" role="main" class="container-fluid mt-2">
        @RenderBody()
    </main>
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="error_toast_box" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div id="error_toast_content" class="toast-body">
            </div>
        </div>
        <div id="success_toast_box" class="toast" role="alert" aria-live="polite" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div id="success_toast_content" class="toast-body"></div>
        </div>
    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted" id="version_display">SwarmUI v<span>@Utilities.Version</span><span> (@Program.CurrentGitDate)</span></span>
        </div>
    </footer>
    <script src="~/js/lib/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-switcher.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/permissions.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/site.js?vary=@Utilities.VaryID"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
