<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title id="page_title">@ViewData["Title"] - SwarmUI</title>
    <link id="bs_theme_header" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" id="sitecssheader" href="~/css/site.css?vary=@Utilities.VaryID" />
    <link rel="stylesheet" id="themecssheader" href="~/css/theme.css?vary=@Utilities.VaryID" />
    @RenderSection("Header", required: false)
    @WebServer.PageHeaderExtra
    <link id="favicon" rel="shortcut icon" href="~/favicon.ico" />
    <script src="~/js/util.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/translator.js?vary=@Utilities.VaryID"></script>
</head>
<body>
    <a class="visually-hidden-focusable" href="#main">Skip to content</a>
    <div id="live_status" class="visually-hidden" aria-live="polite" aria-atomic="true"></div>
    <header>
        <!-- Tier 1: Global header -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Text2Image">
                    <img src="/favicon.ico" alt="SwarmUI Logo" width="24" height="24" class="d-inline-block align-text-top">
                    SwarmUI
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_generate" href="/Text2Image#Generate">Generate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_simple" href="/Text2Image#Simple">Simple</a>
                        </li>
                        <li class="nav-item" id="main_nav_comfy_item" style="display: none;">
                            <a class="nav-link" id="main_nav_comfy" href="/Text2Image#Comfy">ComfyUI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_utilities" href="/Text2Image#Utilities">Utilities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_settings" href="/Text2Image#Settings">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="main_nav_server" href="/Text2Image#Server">Server</a>
                        </li>
                    </ul>
<div class="d-flex align-items-center gap-2">
                        <div id="top_status_bar" class="pe-2"></div>
                        <div class="btn-group" role="group" aria-label="View toggles">
                            <button id="theme_toggle_button" class="btn btn-outline-secondary btn-sm" type="button" title="Toggle theme">
                                <i class="bi bi-moon" id="theme_toggle_icon"></i>
                            </button>
                            <button id="density_toggle_button" class="btn btn-outline-secondary btn-sm" type="button" title="Toggle compact density">
                                <i class="bi bi-arrows-collapse" id="density_toggle_icon"></i>
                            </button>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Accounts/View">Account</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Tier 2: Contextual Sub-Navigation Bar -->
        <div class="bg-body-tertiary border-bottom" id="subnav_bar">
            <div class="container-fluid py-1">
                <ul class="nav nav-underline" id="subnav_list">
                    <!-- Sub-navigation items dynamically populated based on active main tab -->
                </ul>
                <div class="ms-auto small text-secondary" id="subnav_hint"></div>
            </div>
        </div>
    </header>
    <main id="main" role="main" class="container-fluid mt-3">
        @RenderBody()
    </main>
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="error_toast_box" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div id="error_toast_content" class="toast-body">
            </div>
        </div>
        <div id="success_toast_box" class="toast" role="alert" aria-live="polite" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div id="success_toast_content" class="toast-body"></div>
        </div>
    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted" id="version_display">SwarmUI v<span>@Utilities.Version</span><span> (@Program.CurrentGitDate)</span></span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/permissions.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/site.js?vary=@Utilities.VaryID"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
