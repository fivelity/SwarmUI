@{
    string themeId = "modern_dark";
    // TODO: Identify user by auth header and use their settings to determine theme
    if (ViewContext.HttpContext.Request.Cookies.TryGetValue("sui_theme_id", out string themeCookie) && Program.Web.RegisteredThemes.ContainsKey(themeCookie)) {
        themeId = themeCookie;
    }
    WebServer.ThemeData theme = Program.Web.RegisteredThemes[themeId];
    string bsUrl = Url.Content("~/css/bootstrap.min.css");
}
<!DOCTYPE html>
<html data-bs-theme="@(theme.IsDark ? "dark" : "light")" data-theme="@themeId">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title id="page_title">@ViewData["Title"] - SwarmUI - @Program.ServerSettings.UserAuthorization.InstanceTitle</title>
        <link rel="stylesheet" id="bs_theme_header" href="@bsUrl" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="~/css/design-tokens.css?vary=@Utilities.VaryID" />
        <link rel="stylesheet" id="sitecssheader" href="~/css/site.css?vary=@Utilities.VaryID" />
        <link rel="stylesheet" href="~/css/main.css?vary=@Utilities.VaryID" />
        <link rel="stylesheet" id="themecssheader" href="~/css/theme.css?vary=@Utilities.VaryID" />
        @RenderSection("Header", required: false)
        @WebServer.PageHeaderExtra
        @foreach (string path in theme.CSSPaths)
        {
            string themeUrl = $"{path}?vary={Utilities.VaryID}";
            <link class="theme_sheet_header" rel="stylesheet" href="@themeUrl" />
        }
    <link id="favicon" rel="shortcut icon" href="~/favicon.ico" />
    <script src="~/js/util.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/translator.js?vary=@Utilities.VaryID"></script>
</head>
<body>
    <div class="top-status-bar-wrapper">
        <div class="top-status-bar" id="top_status_bar" title="Click for details"></div>
        <div class="status-bar-details" id="status_bar_details" style="display: none;">
            <div class="status-details-header">
                <h6>Generation Queue</h6>
                <button class="status-details-close" onclick="document.getElementById('status_bar_details').style.display='none'">×</button>
            </div>
            <div class="status-details-content" id="status_details_content">
                <p class="text-muted">No active generations</p>
            </div>
        </div>
    </div>
    <div class="center-toast toast-error-box" id="center_toast">
        @WebUtil.Toast("error_toast_box", "Error", "", "error_toast_content", "", false)
    </div>
    <div class="center-toast toast-success-box" id="center_toast_success" style="top: 80px;">
        @WebUtil.Toast("success_toast_box", "Success", "", "success_toast_content", "", false)
    </div>
    <!-- Main Navigation Header -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Text2Image">
                <i class="bi bi-lightning-charge-fill"></i>
                SwarmUI
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link translate" id="main_nav_generate" href="#Generate">Generate</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link translate" id="main_nav_simple" href="#Simple">Simple</a>
                    </li>
                    <li class="nav-item" role="presentation" id="main_nav_comfy_item">
                        <a class="nav-link translate" id="main_nav_comfy" href="#Comfy">Comfy Workflow</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link translate" id="main_nav_utilities" href="#Utilities">Utilities</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link translate" id="main_nav_settings" href="#Settings">User</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link translate" id="main_nav_server" href="#Server">Server</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-2">
                    <span class="navbar-text small">@Program.ServerSettings.UserAuthorization.InstanceTitle</span>
                </div>
            </div>
        </div>
    </nav>
    <!-- Sub-navigation Bar (optional, currently disabled via JS) -->
    <div class="bg-body-tertiary border-bottom" id="subnav_bar" style="display:none;">
        <div class="container-fluid py-1">
            <ul class="nav nav-pills nav-sm" id="subnav_list"></ul>
            <div class="ms-auto small text-secondary" id="subnav_hint"></div>
        </div>
    </div>
    @RenderBody()
    <script src="~/js/lib/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-switcher.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/permissions.js?vary=@Utilities.VaryID"></script>
    <script src="~/js/site.js?vary=@Utilities.VaryID"></script>
    <div id="version_display" class="version-display">SwarmUI v<span>@Utilities.Version</span><span> (@Program.CurrentGitDate)</span></div>

    <!-- Keyboard Shortcuts Help Modal -->
    <div class="modal fade" id="keyboard_shortcuts_modal" tabindex="-1" aria-labelledby="keyboardShortcutsTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="keyboardShortcutsTitle">Keyboard Shortcuts</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="shortcuts-grid">
                        <div class="shortcuts-section">
                            <h6>Generation</h6>
                            <div class="shortcut-row">
                                <kbd>Enter</kbd>
                                <span>Generate (when in prompt field)</span>
                            </div>
                            <div class="shortcut-row">
                                <kbd>Ctrl</kbd> + <kbd>Enter</kbd>
                                <span>Toggle Generate Forever</span>
                            </div>
                            <div class="shortcut-row">
                                <kbd>Alt</kbd> + <kbd>I</kbd>
                                <span>Interrupt Generation</span>
                            </div>
                        </div>
                        <div class="shortcuts-section">
                            <h6>Navigation</h6>
                            <div class="shortcut-row">
                                <kbd>←</kbd> <kbd>→</kbd>
                                <span>Navigate batch gallery</span>
                            </div>
                            <div class="shortcut-row">
                                <kbd>Ctrl</kbd> + <kbd>↑</kbd> <kbd>↓</kbd>
                                <span>Navigate prompt history</span>
                            </div>
                            <div class="shortcut-row">
                                <kbd>Esc</kbd>
                                <span>Close modals & popovers</span>
                            </div>
                            <div class="shortcut-row">
                                <kbd>Tab</kbd>
                                <span>Navigate between fields</span>
                            </div>
                        </div>
                        <div class="shortcuts-section">
                            <h6>General</h6>
                            <div class="shortcut-row">
                                <kbd>Ctrl</kbd> + <kbd>/</kbd>
                                <span>Show this help</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
